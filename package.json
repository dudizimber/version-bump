{
  "name": "@theo.gravity/version-bump",
  "version": "1.0.0-0",
  "description": "Bumps package.json with customizable options",
  "main": "lib/index.js",
  "scripts": {
    "version-bump": "node --require babel-register ./src/bin/version-bump.js",
    "changelog:help": "changelog-version",
    "changelog:verify": "changelog-version verify",
    "changelog:prepare": "changelog-version prepare",
    "changelog:release": "changelog-version release",
    "test": "jest",
    "build": "babel src -d lib",
    "version-bump:debug": "node --inspect-brk --require babel-register ./src/bin/version-bump.js"
  },
  "dependencies": {
    "commander": "^2.16.0",
    "debug": "^3.1.0",
    "git-last-commit": "^0.3.0",
    "load-deps": "^1.0.5",
    "semver-parser": "^2.0.1"
  },
  "devDependencies": {
    "@theo.gravity/changelog-version": "^2.1.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "jest-cli": "^23.3.0",
    "lint-staged": "^7.2.0",
    "mock-fs": "^4.5.0",
    "pre-commit": "^1.2.2",
    "prettier-standard": "^8.0.1",
    "standard": "^11.0.1",
    "toc-md": "^0.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theogravity/version-pump.git"
  },
  "keywords": [
    "version",
    "versioning",
    "cli",
    "bump",
    "semver",
    "package",
    "revision",
    "prerelease",
    "commit",
    "git",
    "release",
    "increment"
  ],
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "author": "Theo Gravity <theo@suteki.nu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theogravity/version-pump/issues"
  },
  "homepage": "https://github.com/theogravity/version-pump#readme"
}
